{
  "rust-analyzer.server.path": "~/.local/bin/rust-analyzer",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".clang-format"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      },
      "client": {
        "snippetSupport": true
      }
    }
  }
}

